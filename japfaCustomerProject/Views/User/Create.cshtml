@model japfaProject.Models.User_Master

@{
    ViewData["Title"] = "Create";
}


<partial name="View/Customer/_PartialView"   />

@*<h1>Add New</h1>*@
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/flexSheet.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>




<div class="row m-0 p-0 mt-4">
    <div class="col-6 p-0 d-flex flex-column align-items-center justify-content-center">

        @*<h4 class="text-center mb-4">User</h4>*@

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row m-0">
                <div class="col-12 p-0 d-flex align-items-center justify-content-between">

                    <div class="form-group form_group">
                        <label asp-for="UserName" class="control-label">User Name</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group form_group">

                        <label class="User Type">Role</label>

                        @*<select id="User Type" class="form-control form_salect">
                                <option value="Admin">Admin</option>
                                <option value="Production Team">Production Team</option>
                                <option value="Dispatch Team">Dispatch Team</option>
                                <option value="Delevery Boy">Delevery Boy</option>
                            </select>*@

                        <select class="form-select form_salect" aria-label="Default select example">
                            <option selected>Select</option>
                            <option value="1">Admin</option>
                            <option value="1">Production Team</option>
                            <option value="2">Dispatch Team</option>
                            <option value="3">Delevery Boy</option>
                        </select>

                    </div>

                </div>
            </div>

            <div class="row m-0">
                <div class="col-12 p-0 d-flex align-items-center justify-content-between">

                    <div class="form-group form_group">
                        <label asp-for="UserType" class="control-label">Type</label>
                        <input asp-for="UserType" class="form-control" />
                        <span asp-validation-for="UserType" class="text-danger"></span>
                    </div>

                    <div class="form-group form_group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="row m-0">
                <div class="col-12 p-0 d-flex align-items-center justify-content-between">

                    <div class="form-group form_group">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group form_group">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="row m-0">
                <div class="col-12 p-0 d-flex align-items-center justify-content-between">

                    <div class="form-group form_group">
                        <label asp-for="CompanyName" class="control-label">Company Name</label>
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>

                    <div class="form-group form_group">
                        <label asp-for="ContactNo" class="control-label">Contact Number</label>
                        <input asp-for="ContactNo" class="form-control" />
                        <span asp-validation-for="ContactNo" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="row m-0">
                <div class="col-12 p-0 d-flex align-items-center justify-content-between">

                    <div class="form-group form_group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group form_group">
                        <label asp-for="EmailId" class="control-label">Email</label>
                        <input asp-for="EmailId" class="form-control" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="row m-0">
                <div class="col-12 p-0 d-flex align-items-center justify-content-between">

                    <div class="form-group form_group">
                        <label asp-for="GSTNo" class="control-label">GST Number</label>
                        <input asp-for="GSTNo" class="form-control" />
                        <span asp-validation-for="GSTNo" class="text-danger"></span>
                    </div>

                    <div class="form-group form_group">
                        <label asp-for="PANNo" class="control-label">PAN Number</label>
                        <input asp-for="PANNo" class="form-control" />
                        <span asp-validation-for="PANNo" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="row m-0 mt-4">
                <div class="col-12 p-0">

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary submit_btn" />
                    </div>

                </div>
            </div>


        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

